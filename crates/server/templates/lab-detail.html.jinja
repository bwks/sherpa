{% extends "base.html.jinja" %}

{% block title %}{{ lab_info.name }} - Lab Details{% endblock %}

{% block header_actions %}
<div class="flex items-center space-x-4">
    <span class="text-gray-700">Welcome, <strong>{{ username }}</strong></span>
    {% if is_admin %}
    <a href="/admin" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
        Admin
    </a>
    {% endif %}
    <a href="/profile" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
        Profile
    </a>
    <button onclick="location.reload()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
        Refresh
    </button>
    <form method="POST" action="/logout" class="inline">
        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors">
            Logout
        </button>
    </form>
</div>
{% endblock %}

{% block content %}
<!-- Breadcrumb Navigation -->
<nav class="breadcrumb mb-6 text-sm text-gray-600">
    <a href="/" class="text-blue-600 hover:text-blue-800 hover:underline">Dashboard</a>
    <span class="mx-2">/</span>
    <a href="/" class="text-blue-600 hover:text-blue-800 hover:underline">Labs</a>
    <span class="mx-2">/</span>
    <span class="text-gray-900 font-medium">{{ lab_info.name }}</span>
</nav>

<!-- Lab Metadata Card -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Lab Information</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="metadata-item">
            <span class="block text-sm font-medium text-gray-500 mb-1">Name</span>
            <span class="block text-base text-gray-900 font-mono">{{ lab_info.name }}</span>
        </div>
        <div class="metadata-item">
            <span class="block text-sm font-medium text-gray-500 mb-1">ID</span>
            <span class="block text-base text-gray-900 font-mono">{{ lab_info.id }}</span>
        </div>
        <div class="metadata-item">
            <span class="block text-sm font-medium text-gray-500 mb-1">IPv4 Network</span>
            <span class="block text-base text-gray-900 font-mono">{{ lab_info.ipv4_network }}</span>
        </div>
        <div class="metadata-item">
            <span class="block text-sm font-medium text-gray-500 mb-1">IPv4 Gateway</span>
            <span class="block text-base text-gray-900 font-mono">{{ lab_info.ipv4_gateway }}</span>
        </div>
        <div class="metadata-item">
            <span class="block text-sm font-medium text-gray-500 mb-1">IPv4 Router</span>
            <span class="block text-base text-gray-900 font-mono">{{ lab_info.ipv4_router }}</span>
        </div>
    </div>
</div>

<!-- Nodes Section -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div id="nodes-table" hx-get="/labs/{{ lab_info.id }}/nodes" hx-trigger="every 60s" hx-swap="innerHTML">
        {% include "partials/nodes-table.html.jinja" %}
    </div>
</div>

<!-- Links Section -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
        Links
        <span class="text-base font-normal text-gray-500">
            ({{ link_count }} total)
        </span>
    </h2>

    {% if link_count > 0 %}
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Node A
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Interface A
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Node B
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Interface B
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Type
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for link in links %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ link.node_a_name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-mono">
                        {{ link.int_a }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ link.node_b_name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-mono">
                        {{ link.int_b }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-mono">
                        {{ link.kind }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <p class="text-center text-gray-500 py-8 italic">No links configured in this lab.</p>
    {% endif %}
</div>

<!-- Bridges Section -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">
        Bridges
        <span class="text-base font-normal text-gray-500">
            ({{ bridge_count }} total)
        </span>
    </h2>

    {% if bridge_count > 0 %}
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Bridge Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Network Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Connected Nodes
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for bridge in bridges %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 font-mono">
                        {{ bridge.bridge_name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-mono">
                        {{ bridge.network_name }}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-700">
                        {{ bridge.connected_nodes.join(", ") }}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <p class="text-center text-gray-500 py-8 italic">No bridges configured in this lab.</p>
    {% endif %}
</div>

<!-- Actions -->
<div class="mt-6 flex items-start space-x-4">
    <a href="/" class="px-6 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
        Back to Dashboard
    </a>
    <div id="destroy-action">
        <button
            hx-get="/labs/{{ lab_info.id }}/destroy/confirm"
            hx-target="#destroy-action"
            hx-swap="innerHTML"
            class="px-6 py-3 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors"
        >
            Destroy Lab
        </button>
    </div>
</div>
{% endblock %}
