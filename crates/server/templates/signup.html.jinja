{% extends "auth-base.html.jinja" %}

{% block title %}Sign Up - Sherpa Labs{% endblock %}

{% block subtitle %}Create your account{% endblock %}

{% block messages %}
    <!-- Errors will be inserted here by HTMX -->
{% endblock %}

{% block content %}
    <!-- Signup Form -->
    <form hx-post="/signup" 
          hx-target="#auth-message" 
          hx-swap="innerHTML"
          class="space-y-4">
        
        <!-- Username Field -->
        <div>
            <label for="username" class="block text-sm font-medium text-gray-700 mb-1">
                Username
            </label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                required 
                autocomplete="username"
                minlength="3"
                pattern="[a-zA-Z0-9@._-]+"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Choose a username"
            >
            <p class="mt-1 text-xs text-gray-500">
                Minimum 3 characters. Only letters, numbers, and @._- allowed.
            </p>
        </div>

        <!-- Password Field -->
        <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                Password
            </label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                required 
                autocomplete="new-password"
                minlength="8"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Create a strong password"
            >
        </div>

        <!-- Confirm Password Field -->
        <div>
            <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1">
                Confirm Password
            </label>
            <input 
                type="password" 
                id="confirm_password" 
                name="confirm_password" 
                required 
                autocomplete="new-password"
                minlength="8"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Re-enter your password"
            >
        </div>

        <!-- Password Requirements -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-3">
            <p class="text-xs font-medium text-gray-700 mb-2">Password must contain:</p>
            <ul class="text-xs text-gray-600 space-y-1">
                <li>• Minimum 8 characters</li>
                <li>• At least one uppercase letter (A-Z)</li>
                <li>• At least one lowercase letter (a-z)</li>
                <li>• At least one special character (!@#$%^&*_+-=)</li>
            </ul>
        </div>

        <!-- Submit Button -->
        <button 
            type="submit" 
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors"
        >
            Create Account
        </button>
    </form>
{% endblock %}

{% block footer_links %}
    Already have an account? 
    <a href="/login" class="text-blue-600 hover:text-blue-700 font-medium">Sign in</a>
{% endblock %}
